<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<div class="lead">
				Yelp Camp
			</div>
			<ul class="list-group">
				<li class="list-group-item active">Info</li>
				<li class="list-group-item">Info</li>
				<li class="list-group-item">Info</li>
			</ul>
		</div>

		<div class="col-md-9">
			<div class="card">
				<img class="card-img-top" src="<%= campInfo.image %>">
				<div class="card-body p-2">
					<h4 class="caption float-right">$9.00/night</h4>
					<h4 class="card-title"><%= campInfo.name%></h4>
					<p class="card-text"><%= campInfo.description%></p>
					<h4 class="card-title"><%= campInfo.author.username%></h4>
				</div>
			</div>

			<div class="card bg-light mt-4">
				<div class="card-body">
					<a class="btn btn-primary float-right" href="/campgrounds/<%= campInfo._id %>/comments/new">Post new comment</a>
				</div>
				<div class="dropdown-divider ml-3 mr-3"></div>
				<div class="card-body">
					<% campInfo.comments.forEach(function(comment){ %>
						<div class="row">
							<div class="col-md-12">
								<strong><%= comment.author.username %></strong>
								<p class="float-right">10 days ago</p>
								<p><%= comment.text%></p>
							</div>
						</div>
					<% }); %>
				</div>
			</div>


		</div>
	</div>
</div>





<% include ../partials/footer %>

