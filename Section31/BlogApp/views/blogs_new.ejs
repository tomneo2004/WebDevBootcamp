
<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>
	<form action="/blogs" method="post" class="ui form">
		<div class="field">
			<div><label>Title</label></div>
			<input type="text" name="blog[title]" placeholder="Title">
		</div>
		<div class="field">
			<div><label>Image URL</label></div>
			<input type="text" name="blog[image]" placeholder="Image URL">
		</div>
		<div class="field">
			<div><label>Blog Content</label></div>
			<textarea name="blog[body]" placeholder="Blog content here"></textarea>
		</div>
		
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

