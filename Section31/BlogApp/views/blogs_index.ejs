<% include partials/header %>

<div class="ui main text container">
	<div class="ui top attached divided items segment">
		<% blogs.forEach((blog)=>{ %>
			<div class="item">
				<img class="image" src="<%= blog.image %>">
				<div class="content">
					<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
					<div class="meta">
						<span><%= blog.created.toDateString() %></span>
					</div>
					<div class="description">
						<p><%- blog.body.substring(0, 100) %> ...</p>
					</div>
					<div>
						<a class="ui purple basic button" href="/blogs/<%= blog._id %>">More Info</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

