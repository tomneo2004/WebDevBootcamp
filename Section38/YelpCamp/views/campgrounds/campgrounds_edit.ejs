<% include ../partials/header %> 



<div class="container">

	<div class="text-center mb-5">
		<h1>Edit <%= campground.name %></h1>
	</div>
	

	<div class="row">
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Name for camp ground" value="<%= campground.name %>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Add new camp ground</button>
				</div>
			</form>

			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
	

</div>




 <% include ../partials/footer %> 
